<h1><%= @user.username %>'s Profile &amp; Tweets</h1>

<% if user_signed_in? %>
  <% if current_user.id != @user.id %>
   <p>
     <% if current_user.following.include?(@user.id) %>
       <%= link_to "Following", unfollow_path(id: @user.id), 
                                class: 'btn btn-primary',
                                id: 'unfollow_btn' %>
     <% else %>
       <%= link_to "Follow", now_following_path(id: @user.id),
                             class: 'btn btn-primary' %>
     <% end %>
    </p>
  <% end %>
<% end %>

<p><%= @user.name %></p>
<p><%= @user.location %></p>
<p><%= @user.bio %></p>

<% @user.tweets.each do |tweets| %>
    <div>
        <p><%= tweets.message.html_safe %></p>
        <p><%= tweets.user.username%></p>
    </div>
<% end %>